{% extends 'admin/base.html.twig' %}

{% block title %}News{% endblock %}

{% block body %}
    <h1>News</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ news.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ news.title }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ news.description }}</td>
        </tr>
        <tr>
            <th>Content</th>
            <td>{{ news.content }}</td>
        </tr>
        <tr>
            <th>Created_at</th>
            <td>{{ news.createdAt ? news.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_news_index') }}">back to list</a>

    <a href="{{ path('admin_news_edit', {'id': news.id}) }}">edit</a>

    {{ include('admin/news/_delete_form.html.twig') }}
{% endblock %}

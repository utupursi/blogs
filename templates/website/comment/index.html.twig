{% extends 'website/base.html.twig' %}

{% block title %}title{% endblock %}

{% block body %}
    <div class="news-container">
{#        <h1>{{ news.title }}</h1>#}
{#        <p class="news-content">{{ news.content }}</p>#}
{#        <p class="news-meta">Published on {{ news.publishedAt|date('F j, Y') }}</p>#}

        <div class="comments-section">
            <h2>Comments ({{ comments|length }})</h2>

            {% if comments is empty %}
                <p class="no-comments">No comments yet.</p>
            {% else %}
                <ul class="comments-list">
                    {% for comment in comments %}
                        <li class="comment-item">
                            <p class="comment-text">{{ comment.comment }}</p>
                            <p class="comment-meta">
                                on {{ comment.createdAt|date('F j, Y H:i') }}
                            </p>

                            <form method="post"
{#                                  action="{{ path('comment_delete', { id: comment.id }) }}"#}
                                  onsubmit="return confirm('Are you sure you want to delete this comment?');">
{#                                <input type="hidden" name="_token"#}
{#                                       value="{{ csrf_token('delete-comment-' ~ comment.id) }}">#}
                                <button class="delete-btn">Delete</button>
                            </form>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    </div>
{% endblock %}

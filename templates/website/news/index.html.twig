{% extends 'website/base.html.twig' %}

{% block title %}Latest News{% endblock %}

{% block body %}
    <div class="news-container">
        <h1>Latest News</h1>

            <div class="category-news-list">

            {% for news in paginatedNews %}
                <div class="news-item">
                    <figure class="news-image-wrapper">
                        <img src="{{ asset('uploads/news/1-683f506f74372.png') }}" alt="{{ news.title }}"
                             class="news-image">
                    </figure>
                    <div class="news-content">
                        <h3 class="news-headline">{{ news.title }}</h3>
                        <p class="news-summary">{{ news.description }}</p>
                        {# <p class="news-date">{{ news.created_at|date('M d, Y') }}</p> #}
                        {# <a href="{{ path('news_show', { id: news.id }) }}" class="news-link">Read more â†’</a> #}
                    </div>
                </div>
            {% else %}
                <li>No news available at the moment.</li>
            {% endfor %}
            </div>

        <div class="pagination">
            {{ knp_pagination_render(paginatedNews,'@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
        </div>
    </div>
{% endblock %}

{% extends 'website/base.html.twig' %}

{% block title %}News by Category{% endblock %}

{% block body %}
    <div class="categories-container">
        {% for category in categories %}
            <div class="category-block">
                <h2 class="category-title">{{ category.title }}</h2>
                <div class="news-list">
                    {% for news in category.news|slice(0, 3) %}
                        <div class="news-card">
                            <h3 class="news-title">{{ news.title }}</h3>
{#                            <p class="news-date">{{ news.created_at|date('M d, Y') }}</p>#}
                            <p class="news-summary">{{ news.description }}</p>
{#                            <a href="{{ path('news_show', {id: news.id}) }}" class="read-more">Read more â†’</a>#}
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
